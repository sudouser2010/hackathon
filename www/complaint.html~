  <script>
  $("#submit_data").click(function(){

  data_to_send = {
   "photos":$("#photos").val(),
    "user_firstname":$("#firstNameInput").val(),
    "user_lastname":$("#lastNameInput").val(),
    "user_email":$("#emailInput").val(),
    "user_phone":$("#phoneInput").val(),
    "violation_type":$("#violation_type").val(),
  "latitude":$("#latitude").val(),
    "longitude":$("#longitude").val(),
    "description":$("#complaintDescriptionInput").val(),
    "location":$("#complaintLocationInput").val(),
    };

    options = {
    type:       "POST",
    url:        "http://www.Davides.me/insert.php",
    data:       data_to_send,
    dataType:   "json",
        };


   $.ajax(options);
                
    
    });
